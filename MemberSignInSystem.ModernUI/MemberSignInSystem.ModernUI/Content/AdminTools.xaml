<UserControl x:Class="MemberSignInSystem.ModernUI.Content.AdminTools"
             x:Name="AdminToolsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:vms="clr-namespace:MemberSignInSystem.ModernUI.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>
        <mui:BBCodeBlock BBCode="Click [url=cmd://refreshdatabase]here[/url] to refresh the member database file."
                         LinkNavigator="{Binding LinkNavigator}"/>
        <!-- <Button Content="refresh member database" Width="Auto" Click="RefreshDatabaseClick" /> -->
    </StackPanel>
</UserControl>
