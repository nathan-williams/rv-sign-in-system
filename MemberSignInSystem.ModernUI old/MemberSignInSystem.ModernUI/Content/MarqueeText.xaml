<UserControl x:Class="MemberSignInSystem.ModernUI.Content.MarqueeText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" >
    <Canvas  ClipToBounds="True" Name="canMain" >
        <TextBlock  Name="tbmarquee" FontWeight="Bold">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="8" Color="{Binding Path=Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TextBlock}}" ShadowDepth="0" Opacity="1" />
            </TextBlock.Effect>
        </TextBlock>
    </Canvas>
</UserControl>
